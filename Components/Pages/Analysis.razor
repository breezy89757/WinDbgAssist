@code {
    private string dumpPath = "";
    private string userQuery = "";
    private bool isAnalyzing = false;
    private bool showSettings = false;
    private string activeAnalysisQuery = "";
    private string currentThought = "";
    private int currentStep = 0;
    private int maxSteps = 10;
    private List<AnalysisSession> sessions = new();
    private AnalysisSession? selectedSession;
    private List<(string Command, string Output, string? Thought)> history => selectedSession?.History ?? new();
    private (string Command, string Output, string? Thought)? selectedHistoryItem;
    private bool showFinalConclusion = false;

    protected override void OnInitialized()
    {
        dumpPath = Config["Debugger:DefaultDumpPath"] ?? "";
    }

    private void ToggleSettings() => showSettings = !showSettings;

    private async Task HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") await StartAutomatedAnalysis();
    }


    private void SelectSession(AnalysisSession session)
    {
        selectedSession = session;
        selectedHistoryItem = null;
        showFinalConclusion = session.FinalDecision != null;
        StateHasChanged();
    }

    private async Task StartAutomatedAnalysis()
    {
        if (string.IsNullOrWhiteSpace(userQuery) || string.IsNullOrEmpty(dumpPath)) return;

        isAnalyzing = true;
        showFinalConclusion = false;
        activeAnalysisQuery = userQuery;
        currentThought = "æº–å‚™å•Ÿå‹•é™¤éŒ¯å¼•æ“...";
        currentStep = 0;
        
        var newSession = new AnalysisSession { Question = userQuery };
        sessions.Insert(0, newSession);
        selectedSession = newSession;
        selectedHistoryItem = null;
        
        StateHasChanged();

        try
        {
            string currentQuery = userQuery;
            userQuery = ""; // Clear input immediately

            while (currentStep < maxSteps)
            {
                currentStep++;
                currentThought = "AI æ­£åœ¨æ€è€ƒé€²ä¸€æ­¥çš„èª¿æŸ¥æŒ‡ä»¤...";
                StateHasChanged();
                
                var decision = await AgentService.DetermineNextActionAsync(currentQuery, selectedSession.History.Select(h => (h.Command, h.Output)).ToList());
                currentThought = decision.Thought;
                StateHasChanged();

                if (decision.Type == DecisionType.FinalConclusion)
                {
                    selectedSession.FinalDecision = decision;
                    showFinalConclusion = true;
                    break;
                }

                if (!string.IsNullOrEmpty(decision.Command))
                {
                    var result = await DebuggerService.ExecuteCommandAsync(dumpPath, decision.Command);
                    var historyItem = (decision.Command, result.Success ? result.Output : result.ErrorMessage, decision.Thought);
                    selectedSession.History.Add(historyItem);
                    selectedHistoryItem = historyItem;
                    StateHasChanged();
                }
                else
                {
                    break;
                }
                
                await Task.Delay(500);
            }
        }
        catch (Exception ex)
        {
            selectedSession.History.Add(("Error", ex.Message, "ç³»çµ±åŸ·è¡Œç•°å¸¸"));
        }
        finally
        {
            isAnalyzing = false;
            StateHasChanged();
        }
    }
}

